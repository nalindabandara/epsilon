
var mongoose = require('mongoose'),
    Schema = mongoose.Schema;

var UserSchema = new Schema({

    email: { type: String, unique: true },// unique 속성을 줌으로써 사용자간 식별자로 사용
    username: String,
    password: String,
    deleted: { type: Number, default: 0 }// 0 : 활동, 1 : 활동 중지

});

mongoose.model('User', UserSchema);
