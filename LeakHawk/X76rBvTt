@CanActivate((next, prev) => { 
   document.title = "mysite | xyz" 
   return true; 
})
	
<div class="xyzComp">
 <p>{{xyzData.msg}}</p>
</div>
	
ngOnInit(){
    console.log("xyz component init");
    this._myRestfulService.getXyz()
        .subscribe(data => {
            console.log("success",data);
            this.xyzData = data;
        }, err => {
            this.xyzData = {msg:"cannot get data"};
            console.log("error", err);
        });
}
