class UploadFile < ActiveRecord::Base
  has_attached_file :file
  belongs_to :uploadable, polymorphic: true
  validates_attachment :file, content_type: { content_type: ["image/jpg", "image/jpeg", "image/png", "image/gif","application/pdf"] }
end

class Auction < ActiveRecord::Base
  has_many :upload_files, as: :uploadable
  accepts_nested_attributes_for :upload_files
end
	
def create
  @auction = Auction.new(auction_params) #getting the error here
  #save and rendering part 
end 
def auction_params
  params.require(:auction).permit(:auction_name,:upload_files_attributes =>[:file=> []])
end
